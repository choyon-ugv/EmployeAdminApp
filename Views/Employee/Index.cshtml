@model IEnumerable<EmployeeAdminApp.Models.Employee>

@{
    Layout = "_Layout";  // Ensure it uses the layout
}

@* Define the Title section here *@
@section Title
{
    Employee List
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Employee Management</h2>

    <div class="d-flex justify-content-between mb-4">
        <a href="@Url.Action("Create", "Employee")" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add New Employee
        </a>
    </div>

    <table class="table table-striped table-bordered shadow-sm">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Position</th>
                <th scope="col">Salary</th>
                <th scope="col" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.FirstName</td>
                    <td>@employee.LastName</td>
                    <td>@employee.Position</td>
                    <td>@employee.Salary.ToString("C")</td>
                    <td class="text-center">
                        <a href="@Url.Action("Edit", "Employee", new { id = employee.Id })" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a href="@Url.Action("Delete", "Employee", new { id = employee.Id })" class="btn btn-danger btn-sm"
                           onclick="return confirm('Are you sure you want to delete this employee?');">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (!Model.Any())
    {
        <div class="alert alert-warning mt-4 text-center" role="alert">
            No employees found.
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
}

