@model EmployeeAdminApp.Models.Employee

@{
    Layout = "_Layout";  // Use the shared layout for consistency
}

@section Title
{
    Edit Employee
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Edit Employee</h2>

    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
        <input type="hidden" asp-for="Id" />

        <div class="form-group mb-3">
            <label for="FirstName">First Name</label>
            <input type="text" class="form-control" id="FirstName" asp-for="FirstName" placeholder="Enter first name" required />
            <div class="invalid-feedback">
                Please enter the first name.
            </div>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label for="LastName">Last Name</label>
            <input type="text" class="form-control" id="LastName" asp-for="LastName" placeholder="Enter last name" required />
            <div class="invalid-feedback">
                Please enter the last name.
            </div>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label for="Position">Position</label>
            <input type="text" class="form-control" id="Position" asp-for="Position" placeholder="Enter position" required />
            <div class="invalid-feedback">
                Please enter the position.
            </div>
            <span asp-validation-for="Position" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label for="Salary">Salary</label>
            <input type="number" class="form-control" id="Salary" asp-for="Salary" placeholder="Enter salary" required />
            <div class="invalid-feedback">
                Please enter the salary.
            </div>
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary btn-lg btn-block">Update Employee</button>
        <a href="@Url.Action("Index", "Employee")" class="btn btn-secondary btn-lg btn-block">Cancel</a>
    </form>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
    <script>
        // Enable Bootstrap form validation
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')

            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}
